<table class="table table-condensed table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @task_lists.reverse.each do |list| %>
      <tr>
        <td><%= link_to list.title, task_list_path(list.id) %></td>
        <td><%= list.archived? %></td>
      </tr>
    <% end %>
  </tbody>
</table>