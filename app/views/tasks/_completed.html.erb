 <h3> Completed Tasks </h3>
<table class="table table-bordered table-condensed table-striped tasks">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Due Date</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @completed.reverse.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.due_date %></td>
        <td><%= link_to 'Edit', edit_task_list_task_path(params[:task_list_id], task.id) %></td>
        <td><%= check_box_tag :completed %></td>
      </tr>
    <% end %>
  </tbody>
</table>